@page
@model ProiectMedii.Pages.Modele.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Clasa_model</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Clasa_model.Model" class="control-label"></label>
                <input asp-for="Clasa_model.Model" class="form-control" />
                <span asp-validation-for="Clasa_model.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clasa_model.AgentID" class="control-label">Agent</label>
                <select asp-for="Clasa_model.AgentID" class="form-control" asp-items="@(ViewData["AgentID"] as SelectList)">
                    <option value="">-- Select Agent --</option>
                </select>
                <span asp-validation-for="Clasa_model.AgentID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clasa_model.Pret" class="control-label"></label>
                <input asp-for="Clasa_model.Pret" class="form-control" />
                <span asp-validation-for="Clasa_model.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clasa_model.DataPublicarii" class="control-label"></label>
                <input asp-for="Clasa_model.DataPublicarii" class="form-control" />
                <span asp-validation-for="Clasa_model.DataPublicarii" class="textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clasa_model.BrandID" class="control-label">Nume Brand</label>
                <select asp-for="Clasa_model.BrandID" class="form-control" asp-items="@(ViewData["BrandID"] as SelectList)">
                    <option value="">-- Select Brand --</option>
                </select>
                <span asp-validation-for="Clasa_model.BrandID" class="text-danger"></span>
            </div>

             <div class="form-group">
                 <div class="table">
                     <table>
                         <tr>
                         @{
                             int cnt = 0;
                             foreach (var cat in Model.AssignedCategoryDataList)
                             {
                                 if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                     }
                                    @:<td>
                                         <input type="checkbox"
                                             name="selectedCategories"
                                             value="@cat.CategorieID"
                                             @(Html.Raw(cat.Assigned ?
                                            "checked=\"checked\"" : "")) />
                                         @cat.CategorieID @: @cat.Nume
                                 @:</td>
                             }
                         @:</tr>
                         }
                     </table>
                 </div>
             </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
@if (ViewData["ModelStateErrors"] != null)
{
    <div class="alert alert-danger">
        @ViewData["ModelStateErrors"]
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
